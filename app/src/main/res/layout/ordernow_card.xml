<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    app:cardBackgroundColor="?attr/cardbackground"
    android:background="@drawable/whats_now_card_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/restaurant_image"
            android:src="@drawable/breaking_news"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restaurant_name"
            android:layout_toRightOf="@+id/restaurant_image"
            android:text="@string/app_name"
            android:textColor="?attr/textcolor"
            android:textSize="@dimen/title_text"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/restuarant_item_name"
            android:layout_toRightOf="@id/restaurant_image"
            android:layout_below="@id/restaurant_name"
            android:text="Protein salad"
            android:textColor="?attr/textcolor"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_price"
            android:layout_toRightOf="@id/restaurant_image"
            android:layout_below="@id/restuarant_item_name"
            android:text="85.0"
            android:textColor="?attr/textcolor"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>


    </RelativeLayout>




</LinearLayout>